<%- include ('../../layouts/ejs/head.ejs') %>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/add-product.css">
  <link rel="stylesheet" href="/css/forms.css">
  <%- include('../../layouts/ejs/header.ejs') %>
  <main>
    <form action="/admin/<% if (editMode) { %>edit-product<%} else{ %>product<%}%>" method="POST">
      <div class="form-control">
        <label for="titel">Titel</label>
        <input type="text" name="title" id='titel' value="<% if (editMode) { %><%=product.title%><%} else{ %><%=''%><%}%>" required>
      </div>
        <div class="form-control">
        <label for="imageurl">Image URL</label>
        <input type="text" name="imageUrl" id='imageUrl' value="<% if (editMode) { %><%=product.imageUrl%><%} else{ %><%=''%><%}%>" required>
      </div>
      
        <div class="form-control">
        <label for="price">Price</label>
        <input type="number" name="price" id='price' pattern="[0-9]+([,\.][0-9]+)?" step="0.01" value="<% if (editMode) { %><%=product.price%><%} else{ %><%=''%><%}%>">
      </div>
      <div class="form-control">
      <label for="description">Description</label>
      <textarea name="description" id="description" cols="24" rows="5"><% if (editMode) { %><%=product.description%><%} else{ %><%=''%><%}%> </textarea>
      </div>
      <% if (editMode) {%>
          <input type="hidden" value="<%=product._id %>" name='productId'>
     
      <%} %>
      <button type="submit"> <% if (editMode) { %> Update Product <%} else{ %> Add Product  <%}%></button>
    </form>
  </main>
</body>
</html>