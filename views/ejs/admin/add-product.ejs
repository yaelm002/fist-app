<%- include ('../../layouts/ejs/head.ejs') %>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/add-product.css">
  <link rel="stylesheet" href="/css/forms.css">
  <%- include('../../layouts/ejs/header.ejs') %>
  <main>
    <form action="/admin/product" method="POST">
      <div class="form-control">
        <label for="titel">Titel</label>
        <input type="text" name="title" id='titel' required>
      </div>
        <div class="form-control">
        <label for="imageurl">Image URL</label>
        <input type="text" name="imageUrl" id='imageUrl' required>
      </div>
      
        <div class="form-control">
        <label for="price">Price</label>
        <input type="number" name="price" id='price' pattern="[0-9]+([,\.][0-9]+)?" step="0.01">
      </div>
      <div class="form-control">
      <label for="description">Description</label>
      <textarea name="description" id="description" cols="24" rows="5"></textarea>
      </div>
      <button type="submit">Add Product</button>
    </form>
  </main>
</body>
</html>